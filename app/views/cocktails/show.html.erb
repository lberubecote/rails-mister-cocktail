<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>


  <ul>
    <p><% @cocktail.doses.each do |dose|%></p>
      <li><%= dose.description %> : <%= dose.ingredient.name %><%= link_to '- Delete a dose', dose_path(dose), method: :delete %> </li>
    <% end %>
  </ul>

<%= link_to "+ Add a new dose", new_cocktail_dose_path(@cocktail) %>

